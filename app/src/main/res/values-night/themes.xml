<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AlarmeMotivacional" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deskclock_primary</item>
        <item name="colorPrimaryVariant">@color/deskclock_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/deskclock_background</item>
        <item name="android:navigationBarColor">@color/deskclock_background</item>
        <item name="android:windowBackground">@color/deskclock_background</item>
        <item name="android:textColor">@color/deskclock_on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="materialCardViewStyle">@style/DeskClockCard</item>
        <item name="materialSwitchStyle">@style/DeskClockSwitch</item>
        <item name="android:buttonStyle">@style/DeskClockButton</item>
        <item name="android:listDivider">@color/deskclock_divider</item>
        <item name="android:colorAccent">@color/deskclock_primary</item>
    </style>

    <style name="Theme.AlarmeMotivacional.NoActionBar" parent="Theme.AlarmeMotivacional">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
