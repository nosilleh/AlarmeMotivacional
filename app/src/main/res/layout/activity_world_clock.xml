<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deskclock_background"
    android:paddingHorizontal="@dimen/deskclock_screen_padding"
    android:paddingTop="@dimen/deskclock_title_top_padding">

    <FrameLayout
        android:id="@+id/worldHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/poco_surface_card"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/DeskClockHeadline"
                android:id="@+id/titleWorld"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/world_clock_title"
                app:layout_constraintEnd_toStartOf="@+id/btnWorldMore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnWorldAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_ripple_button"
                android:contentDescription="@string/add_alarm_title"
                android:padding="10dp"
                android:tint="@color/deskclock_on_surface"
                app:layout_constraintEnd_toStartOf="@id/btnWorldMore"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_add" />

            <ImageButton
                android:id="@+id/btnWorldMore"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_ripple_button"
                android:contentDescription="@string/overflow_menu"
                android:padding="10dp"
                android:tint="@color/deskclock_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_vert" />

            <TextView
                android:id="@+id/worldHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/world_clock_local"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleWorld"
                tools:text="Mantenha horários globais à vista" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/DeskClockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/worldHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <AnalogClock
                android:id="@+id/analogClock"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="8dp"
                android:dial="@drawable/clock_dial"
                android:hand_hour="@drawable/clock_hand_hour"
                android:hand_minute="@drawable/clock_hand_minute" />

            <TextView
                android:id="@+id/textLocalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="04:06:26"
                android:textColor="@color/deskclock_on_surface"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/textLocalLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/world_clock_local"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textEmptyWorld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/world_clock_empty"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="14sp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        layout="@layout/include_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
