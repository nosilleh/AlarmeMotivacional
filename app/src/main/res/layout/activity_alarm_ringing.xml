<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ringingRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deskclock_background"
    android:padding="24dp"
    tools:context=".ui.alarms.AlarmRingingActivity">

    <com.google.android.material.card.MaterialCardView
        style="@style/DeskClockCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        app:cardBackgroundColor="@color/deskclock_surface"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/alarm_ringing_title"
                android:tint="@color/deskclock_primary"
                app:srcCompat="@drawable/ic_alarm" />

            <TextView
                android:id="@+id/textAlarmTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/alarm_ringing_title"
                android:textColor="@color/deskclock_on_surface"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Alarme tocando" />

            <TextView
                android:id="@+id/textAlarmSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/alarm_ringing_subtitle"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="15sp"
                tools:text="Pré-toque ativo" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="20dp"
                android:background="@color/deskclock_divider" />

            <TextView
                android:id="@+id/textAlarmAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/alarm_ringing_action"
                android:textColor="@color/deskclock_on_surface"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Toque para ver o vídeo" />

            <TextView
                android:id="@+id/textAlarmHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/alarm_ringing_hint"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="14sp"
                tools:text="O som será interrompido ao tocar" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
