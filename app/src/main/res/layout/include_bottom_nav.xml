<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/deskclock_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingHorizontal="12dp">

    <LinearLayout
        android:id="@+id/navAlarme"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background"
        android:selected="true">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="4dp"
            android:duplicateParentState="true"
            android:src="@drawable/ic_alarm"
            android:tint="@color/bottom_nav_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/tab_alarm"
            android:textColor="@color/bottom_nav_tint"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navWorld"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="4dp"
            android:duplicateParentState="true"
            android:src="@drawable/ic_world"
            android:tint="@color/bottom_nav_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/tab_world"
            android:textColor="@color/bottom_nav_tint"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navStopwatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="4dp"
            android:duplicateParentState="true"
            android:src="@drawable/ic_stopwatch"
            android:tint="@color/bottom_nav_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/tab_stopwatch"
            android:textColor="@color/bottom_nav_tint"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navTimer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/nav_item_background">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginBottom="4dp"
            android:duplicateParentState="true"
            android:src="@drawable/ic_timer"
            android:tint="@color/bottom_nav_tint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:text="@string/tab_timer"
            android:textColor="@color/bottom_nav_tint"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
