<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deskclock_background"
    android:paddingHorizontal="@dimen/deskclock_screen_padding"
    android:paddingTop="@dimen/deskclock_title_top_padding">

    <TextView
        android:id="@+id/titleStopwatch"
        style="@style/DeskClockHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stopwatch_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnStopwatchMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/round_ripple_button"
        android:contentDescription="@string/overflow_menu"
        android:padding="10dp"
        android:tint="@color/deskclock_on_surface_secondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_more_vert" />

    <TextView
        android:id="@+id/textStopwatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="00:00.00"
        android:textColor="@color/deskclock_on_surface"
        android:textSize="48sp"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleStopwatch" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnStopwatchPlay"
        style="@style/DeskClockCard"
        android:layout_width="@dimen/deskclock_play_button"
        android:layout_height="@dimen/deskclock_play_button"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/card_corner_circle"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@color/deskclock_surface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textStopwatch">

        <ImageView
            android:layout_width="@dimen/deskclock_play_icon"
            android:layout_height="@dimen/deskclock_play_icon"
            android:layout_gravity="center"
            android:src="@drawable/ic_play"
            android:tint="@color/deskclock_primary" />
    </com.google.android.material.card.MaterialCardView>

    <include
        layout="@layout/include_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
