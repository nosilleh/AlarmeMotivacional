<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deskclock_background"
    android:paddingHorizontal="@dimen/deskclock_screen_padding"
    android:paddingTop="@dimen/deskclock_title_top_padding">

    <FrameLayout
        android:id="@+id/stopwatchHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/poco_surface_card"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleStopwatch"
                style="@style/DeskClockHeadline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/stopwatch_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnStopwatchMenu" />

            <ImageButton
                android:id="@+id/btnStopwatchMenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_ripple_button"
                android:contentDescription="@string/overflow_menu"
                android:padding="10dp"
                android:tint="@color/deskclock_on_surface"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_more_vert" />

            <TextView
                android:id="@+id/stopwatchHint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/stopwatch_title"
                android:textColor="@color/deskclock_on_surface_secondary"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleStopwatch"
                tools:text="Cronometre sem esforÃ§o e salve suas voltas" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

    <com.google.android.material.card.MaterialCardView
        style="@style/DeskClockCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:padding="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stopwatchHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textStopwatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="00:00.00"
                android:textColor="@color/deskclock_on_surface"
                android:textSize="52sp"
                android:fontFamily="sans-serif-medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/titleStopwatch" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btnStopwatchPlay"
                style="@style/DeskClockCard"
                android:layout_width="@dimen/deskclock_play_button"
                android:layout_height="@dimen/deskclock_play_button"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:focusable="true"
                app:cardCornerRadius="@dimen/card_corner_circle"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/deskclock_primary"
                app:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/deskclock_play_icon"
                    android:layout_height="@dimen/deskclock_play_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_play"
                    android:tint="@color/deskclock_background" />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <include
        layout="@layout/include_bottom_nav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
