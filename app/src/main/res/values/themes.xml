<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AlarmeMotivacional" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/deskclock_primary</item>
        <item name="colorPrimaryVariant">@color/deskclock_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/deskclock_background</item>
        <item name="android:navigationBarColor">@color/deskclock_background</item>
        <item name="android:windowBackground">@color/deskclock_background</item>
        <item name="android:textColor">@color/deskclock_on_surface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="materialCardViewStyle">@style/DeskClockCard</item>
        <item name="materialSwitchStyle">@style/DeskClockSwitch</item>
        <item name="android:buttonStyle">@style/DeskClockButton</item>
        <item name="android:listDivider">@color/deskclock_divider</item>
        <item name="android:colorAccent">@color/deskclock_primary</item>
    </style>

    <style name="Theme.AlarmeMotivacional.NoActionBar" parent="Theme.AlarmeMotivacional">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DeskClockCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/miui_card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_large</item>
        <item name="cardElevation">2dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/card_stroke</item>
        <item name="strokeWidth">0.5dp</item>
        <item name="android:outlineAmbientShadowColor">@color/miui_card_shadow</item>
        <item name="android:outlineSpotShadowColor">@color/miui_card_shadow</item>
        <item name="rippleColor">@color/deskclock_ripple</item>
    </style>

    <style name="DeskClockSwitch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb_tint</item>
        <item name="trackTint">@color/switch_track_tint</item>
    </style>

    <style name="DeskClockButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/deskclock_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeskClockLabel" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/deskclock_on_surface_secondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DeskClockSectionTitle" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/deskclock_on_surface_secondary</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeskClockHeadline" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">@color/deskclock_on_surface</item>
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeskClockPickerText" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/deskclock_on_surface</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="DeskClockBottomNav" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/bottom_nav_tint</item>
        <item name="android:textSize">@dimen/deskclock_bottom_nav_label</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
