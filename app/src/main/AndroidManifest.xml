<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissão para alarmes exatos -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <!-- Recebe o broadcast de reinício para reativar alarmes -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Permite tocar som mesmo com tela bloqueada -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <!-- Permite serviços em primeiro plano (alarme tocando) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <!-- Acesso à galeria para pegar o vídeo motivacional -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <!-- Necessário a partir do Android 13+ para mostrar notificações -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".AlarmApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AlarmeMotivacional">

        <!-- Activity para criar novo alarme -->
        <activity
            android:name=".ui.alarms.AddAlarmActivity"
            android:exported="false" />

        <!-- Activity do vídeo motivacional -->
        <activity
            android:name=".ui.alarms.VideoActivity"
            android:exported="false"
            android:theme="@style/Theme.AlarmeMotivacional.NoActionBar"/>

        <!-- Activity principal / alarme disparado -->
        <activity
            android:name=".ui.alarms.AlarmActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service responsável pelo pré-toque (som do alarme) -->
        <service
            android:name=".ui.alarms.AlarmService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />

        <!-- Receiver que reativa alarmes após reiniciar o dispositivo -->
        <receiver
            android:name=".ui.alarms.BootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>